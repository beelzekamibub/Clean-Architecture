@{
    ViewData["Title"] = "Amenities";
}

@model IEnumerable<Amenity>

<div class="w-100 card border-0 p-4">
    <div class="card-header border ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">
                    Amenities
                </h2>
            </div>
        </div>
    </div>



    <div class="card-body border p-3">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Amenity" asp-action="Create" class="btn btn-secondary"><i class="bi bi-house-add"></i> Add Amenity</a>
            </div>
        </div>


        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Amenity</th>
                    <th>Description</th>
                    <th>Villa Name</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <input type="hidden" name="amenityId" asp-for=@item.AmenityId />
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Villa.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Amenity" asp-action="Update" asp-route-amenityId="@item.AmenityId" class="btn btn-warning mx-2">
                                    <i class="bi bi-pencil-square"></i> Update
                                </a>
                                <a asp-controller="Amenity" asp-action="Delete" asp-route-amenityId="@item.AmenityId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>