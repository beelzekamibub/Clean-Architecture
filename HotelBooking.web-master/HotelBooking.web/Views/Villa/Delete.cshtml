@{
	ViewData["Title"] = "Delete Villa";
}
@using HotelBooking.Domain.Entities;
@model Villa;

@{
	ViewData["Title"] = "Add Villa";
}

<div class="w-100 card border-0 p-4">
	<div class="card-header border ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-dark py-2">
					Create Villa
				</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<input hidden asp-for="@Model.Id" />
			<div class="p-3">
				<div asp-validation-Summary="All" class="text-danger"></div>
				<div class="form-floating py-1 col-12">
					<input disabled asp-for="@Model.Name" class="form-control border shadow" />
					<label asp-for="Name" class=""></label>
					<span asp-validation-for="Name" class="text-danger ms-3"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input disabled asp-for="@Model.Description" class="form-control border shadow" />
					<label asp-for="Description" class=""></label>
					<span asp-validation-for="Description" class="text-danger ms-3"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input disabled asp-for="@Model.Price" class="form-control border shadow" />
					<label asp-for="Price" class=""></label>
					<span asp-validation-for="Price" class="text-danger ms-3"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input disabled asp-for="@Model.Sqft" class="form-control border shadow" />
					<label asp-for="Sqft" class=""></label>
					<span asp-validation-for="Sqft" class="text-danger ms-3"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input disabled asp-for="@Model.Occupancy" class="form-control border shadow" />
					<label asp-for="Occupancy" class=""></label>
					<span asp-validation-for="Occupancy" class="text-danger ms-3"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input disabled asp-for="@Model.ImageUrl" class="form-control border shadow" />
					<label asp-for="ImageUrl" class=""></label>
					<span asp-validation-for="ImageUrl" class="text-danger ms-3"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-6"></div>
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-warning w-100"><i class="bi bi-trash-fill"></i> Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Villa" asp-action="Index" class="btn btn-danger w-100"><i class="bi bi-x-circle"></i> Cancel</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"> </partial>
	}
}