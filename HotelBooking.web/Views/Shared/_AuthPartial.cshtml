@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager

<ul class="navbar-nav">
	@if (signInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" href="#">Hello, @userManager.GetUserName(User)</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Logout</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Login</a>
		</li>
	}
</ul>