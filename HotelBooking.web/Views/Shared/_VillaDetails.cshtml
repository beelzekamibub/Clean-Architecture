@model Villa
<div class="row">
	<div class="col-12 col-md-5">
		<img src="@Model.ImageUrl" style="border-radius:10px;" width="100%" />
	</div>
	<div class="col-12 col-md-7">
		<div class="row p-2">
			<div class="col-12">
				<p class="card-title text-warning" style="font-size:xx-large">@Model.Name</p>
				<p class="card-text" style="font-size:large">@Model.Description</p>
				@if (Model.Amenities != null && Model.Amenities.Count() > 0)
				{
					<p class="h5 text-warning">Villa Amenities</p>
					<ul>
						@foreach (var amenity in Model.Amenities)
						{
							<li>
								@amenity.Name @if (!String.IsNullOrEmpty(amenity.Description))
								{
									@("- " + amenity.Description)
								}
							</li>
						}
					</ul>
				}
			</div>
		</div>
		<div class="row col-12">
			<span class="text-end pt-3 m-0">
				<span class="float-right">Max Occupancy : @Model.Occupancy</span><br />
				<span class="float-right pt-1">Villa Size : @Model.Sqft</span><br />
				<p class="font-weight-bold pt-1" style="color: #ff6a00;">
					USD
					<span style="color: #ff6a00;">
						@Model.Price.ToString("c",new System.Globalization.CultureInfo("en-US")) /Night
					</span>
				</p>
			</span>
		</div>
	</div>
</div>