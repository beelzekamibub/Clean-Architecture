@model RegisterVM;
@{
	ViewData["Title"] = "Login";
}
<style>
	.required::after {
		content: "*";
		font-weight: bold;
		color: red;
	}
	.flexcontainer {

		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
<div class="flexcontainer">
	<div class="col-6">
		<div class="container pt-5">
			<div class="card shadow border">
				<div class="card-header bg-gradient ml-0 py-4">
					<div class="row">
						<div class="col-12 text-center">
							<h2 class="py-2 text-black">Register</h2>
						</div>
					</div>
				</div>
				<div class="card-body p-4">
					<div class="row">
						<div class="col-md-12">
							<section>
								<form class="row" method="post">
									<div asp-validation-summary="All"></div>
									<div class="form-floating mb-3 col-md-6">
										<input asp-for="Email" class="form-control" aria-required="true" />
										<label asp-for="Email" class="ms-2 text-dark text-muted"></label>
										<span asp-validation-for="Email" class="text-danger"></span>
									</div>
									<div class="form-floating mb-3 col-md-6">
										<input asp-for="Name" class="form-control" />
										<label asp-for="Name" class="ms-2 text-dark text-muted"></label>
										<span asp-validation-for="Name" class="text-danger"></span>
									</div>
									<div class="form-floating mb-3 col-md-6">
										<input asp-for="PhoneNumber" class="form-control" />
										<label asp-for="PhoneNumber" class="ms-2 text-dark text-muted"></label>
										<span asp-validation-for="PhoneNumber" class="text-danger"></span>
									</div>
									<div class="form-floating mb-3 col-md-6">
										<input asp-for="Password" class="form-control" />
										<label asp-for="Password" class="ms-2 text-dark text-muted"></label>
										<span asp-validation-for="Password" class="text-danger"></span>
									</div>
									<div class="form-floating mb-3 col-md-6">
										<input asp-for="ConfirmPassword" class="form-control" />
										<label asp-for="ConfirmPassword" class="ms-2 text-dark text-muted"></label>
										<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
									</div>

									<div class="form-floating mb-3 col-md-6">
										<select asp-for="SelectedRole" class="form-select" asp-items="@Model.Roles">
											<option disabled selected>-Select Role-</option>
										</select>
									</div>
									<div class="col-12">
										<button type="submit" class="w-100 btn btn-lg btn-outline-success">Register</button>
									</div>
								</form>
							</section>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}