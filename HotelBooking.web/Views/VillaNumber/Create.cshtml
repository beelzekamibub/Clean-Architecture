@model VillaNumberVM;
@{
    ViewData["Title"] = "Create Villa Number";
}


<style>
    .required::after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>
<div class="w-100 card border-0 p-4">
    <div class="card-header border ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">
                    Create Villa Number
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">

        <form method="post" class="row">
            <div class="col-2"></div>
            <div class="p-3 col-8">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.VillaNumber.VillaId" class="form-select border shadow" asp-items="@Model.VillaList">
                        <option disabled selected>--Select Villa--</option>
                    </select>
                    <label asp-for="VillaNumber.VillaId" class="required"></label>
                    <span asp-validation-for="@Model.VillaNumber.VillaId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.VillaNumber.Villa_Number" class="form-control border shadow" />
                    <label asp-for="VillaNumber.Villa_Number" class="required"></label>
                    <span asp-validation-for="VillaNumber.Villa_Number" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.VillaNumber.SpecialDetails" class="form-control border shadow" />
                    <label asp-for="VillaNumber.SpecialDetails" class="required"></label>
                    <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-md-6"></div>
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100"><i class="bi bi-check-circle"></i> Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-secondary w-100"><i class="bi bi-x-circle"></i> Cancel</a>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
                    }