@model Villa;
@{
    ViewData["Title"] = "Create Villa";
}


<style>
    .required::after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>
<div class="w-100 card border-0 p-4">
    <div class="card-header border ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">
                    Create Villa
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">

        <form method="post" class="row" enctype="multipart/form-data">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="p-3">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Name" class="form-control border shadow custom-height" />
                        <label asp-for="Name" class="required"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Description" class="form-control border shadow custom-height" />
                        <label asp-for="Description" class="required"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Price" class="form-control border shadow custom-height" />
                        <label asp-for="Price" class="required"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Sqft" class="form-control border shadow custom-height" />
                        <label asp-for="Sqft" class="required"></label>
                        <span asp-validation-for="Sqft" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="@Model.Occupancy" class="form-control border shadow custom-height" />
                        <label asp-for="Occupancy" class="required"></label>
                        <span asp-validation-for="Occupancy" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input hidden asp-for="@Model.ImageUrl" class="form-control border shadow custom-height" />
                        <input asp-for="@Model.Image" class="form-control border shadow custom-height" />
                        <label asp-for="Image"></label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-md-6"></div>
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-success w-100"><i class="bi bi-check-circle"></i> Create</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100"><i class="bi bi-x-circle"></i> Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-2"></div>
        </form>

        <style>
            .custom-height {
                height: 60px; /* Adjust the height according to your preference */
            }
        </style>

    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}